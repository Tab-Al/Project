
<div class="header">
	<a href="/" class="logo" title="Go to Homepage" style="font-family">T-S-T eStore</a>
 	<div class="header-right">
		<% if (user) { %>
			<% if(session.cart) { %>
			<a href="/cart"><span>Cart : <%= session.cart.totalQty %></span></a>
			<% } %>
			<% if(!session.cart) { %>
			<a href="/cart">Cart <span>0</span></a>
			<% } %>
			<a href="/users/">User : <%= user.id %></a>
			<a href="/logout">Logout</a>
		<% } else { %>
			<a onclick="openlogin()">Login</a>
	    <a onclick="opensignup()">Signup</a>
		<% } %>
  </div>
</div>

<div id="sidenav">
	<p style="font-size:40px; font-weight:bold;">LOGIN</p>
	<span class="closebtn" onclick="closelogin()">&times;</span>
	<br><br>
	<form action="/login" method="post">
			<input type="text" id="2" name="username" placeholder="Username" required>
			<br><br><br>
			<input type="password" name="password" id="psw" placeholder="Password" required>
			<br>
			<input type="checkbox" onclick="showpass()">Show Password
			<br><br><br>
			<button type="submit" class="but">Submit</button>
	</form>
	<p onclick="opensignup(); closelogin();">New User?</p>
</div>

<div id="sidenav2">
	<p style="font-size:40px; font-weight:bold;">SIGNUP</p>
	<span class="closebtn" onclick="closesignup()">&times;</span>
	<br>
	<form action="/signup" method="get">

			<input type="text" name="username" placeholder="Username" required>
			<br><br><br>
			<input type="password" name="password" id="psw" placeholder="Password" required>
			<br><br><br>
			<input name="phone" type="tel" minlength="10" maxlength="10" placeholder="Phone Number" pattern="[0-9]{10}" required>
			<br><br><br>
			<input type="text" name="bday" onfocus="(this.type = 'date')" onblur="(this.type = 'text')" placeholder="B-Day" required>
			<br><br><br>
			<input type="email" name="email" placeholder="E-Mail" required>
			<br><br><br>
			<button type="submit" class="but">Submit</button>
	</form>
</div>

